<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:text="手机号：15651809891"
            android:textSize="20dp"
            android:textColor="#FFFAFA"
             />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"

            android:gravity="center_vertical"
            android:text="用户名：Joey"
            android:textSize="20dp"
            android:textColor="#FFFAFA"
            />

        <Button
            android:id="@+id/getverifycode"

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@mipmap/pencil"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ifgesture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="是否开启手势翻页模式"
            android:textSize="20dp"
            android:textColor="#FFFAFA"
            />

        <Button
            android:id="@+id/switch1"

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/switch1"

            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/linear1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        >
        <TextView
            android:id="@+id/file"
            android:text="File"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal"
            android:drawableTop="@mipmap/file_white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            >
        </TextView>
        <TextView
            android:id="@+id/cloud"
            android:text="Cloud"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:textColor="#FFFFFF"
            android:drawableTop="@mipmap/cloud_white"
            android:layout_toRightOf="@id/file"
            android:layout_toLeftOf="@id/user"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            >
        </TextView>
        <TextView
            android:id="@+id/user"
            android:text="User"
            android:gravity="center_horizontal"
            android:drawableTop="@mipmap/user_white"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="#FFFFFF"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            >
        </TextView>

    </RelativeLayout>




</LinearLayout>
